<div class="container fluid show_product">

<% cache @product do %>

<h1><%= @product.name %></h1>


  <h3>Description:</h3>
   <p><%= @product.description %></p>


   <%= image_tag( @product.image_url, width: "350px", class: 'img-zoom', data_image_zoom: @product.image_url) %>

   <p><%= @product.colour %></p>

  <strong>Price:</strong>
   <p>$<%= @product.price %></p>
   <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
   <%= form_tag "/payments/create" do %>
   <%= render partial: "shared/stripe_checkout_button" %>
   <% end %>
  <% end %>

</div>

<%= render 'new_comment' %>
<%= render 'comments' %>

<footer class="footer navbar-fixed-bottom">         <%  if signed_in? && current_user.admin? %>
            <%= link_to 'Edit -', edit_product_path %>
         <% end %> |
<%= link_to 'Back', products_path %></footer>
